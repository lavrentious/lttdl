{
  "name": "lttdl",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "rm -rf dist ; bun build --production --target=bun --outdir ./dist --root src src",
    "dev": "NODE_ENV=development nodemon --exec bun src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tobyg74/tiktok-api-dl": "^1.3.7",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "grammy": "^1.38.4",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.13"
  }
}